<?xml version="1.0"?>


<launch>

	<node pkg="tf" type="static_transform_publisher" name="add_laser_to_baselink" args="0.13 0 0.13 0 0 0 base_link laser 100"/>
	
	<node pkg="map_server" type="map_server" name="map_server" args="/home/bot/catkin_ws/src/fetch/map/salle1.yaml" />

	<!--Ouverture de rviz avec les bons parametres --> 
	<node pkg="rviz" name="rviz" type="rviz" args="-d $(find fetch)/rviz/mapping_init.rviz" />


  <!-- Localization-->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <remap from="base_scan" to="base_scan"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>
    <param name="transform_tolerance" value="0.2"/>
    <param name="min_particles" value="5.0"/>
    <param name="max_particles" value="20.0"/>

  </node>

<!-- Move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find fetch)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find fetch)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find fetch)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find fetch)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find fetch)/config/base_local_planner_params.yaml" command="load" />

    <remap from="cmd_vel" to="cmd_vel"/>
    <remap from="odom" to="odom"/>
    <remap from="base_scan" to="base_scan"/>

    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

  </node>


</launch>
